<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
   <com.chenjiajuan.tigerview.game.WheelView
       android:id="@+id/wheelview1"
       android:layout_width="100dp"
       android:layout_height="100dp"
       app:layout_constraintTop_toBottomOf="@id/btn_view"
       />
   <com.chenjiajuan.tigerview.game.WheelView
       android:id="@+id/wheelview2"
       android:layout_width="100dp"
       android:layout_height="100dp"
       app:layout_constraintLeft_toRightOf="@id/wheelview1"
       app:layout_constraintTop_toBottomOf="@id/btn_view"
       />
   <com.chenjiajuan.tigerview.game.WheelView
       android:id="@+id/wheelview3"
       android:layout_width="100dp"
       android:layout_height="100dp"
       app:layout_constraintLeft_toRightOf="@id/wheelview2"
       app:layout_constraintTop_toBottomOf="@id/btn_view"
       />
   <Button
       android:id="@+id/btn_view"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:onClick="startRun"
       />
</android.support.constraint.ConstraintLayout>
