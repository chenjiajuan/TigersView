<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.chenjiajuan.stepview.MainActivity">
    <com.chenjiajuan.stepview.StepView
        android:id="@+id/stepView"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:completeColor="@color/c_41c961"
        app:unCompleteColor="@color/c_999999"
        app:currentColor="@color/c_f7b93c"
        app:iconWidth="35dp"
        app:iconHeight="35dp"
        app:leftPadding="10dp"
        app:textTopPadding="20dp"
        app:lineHeight="5dp"
        app:lineWidth="30dp"
        app:textSize="20sp"
        app:iconComplete="@mipmap/ic_sign_finish"
        app:iconCurrent="@mipmap/ic_sign_unfinish"
        app:iconUnComplete="@mipmap/ic_sign_unfinish"
        />

     <Button
         app:layout_constraintTop_toBottomOf="@+id/stepView"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:onClick="OnClick"
         />

</android.support.constraint.ConstraintLayout>
